{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "lib": [
      "ES2020",
      "DOM"
    ],
    "outDir": "./public/dist",
    "rootDir": "./public",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true
  },
  "include": [
    "public/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "public/dist"
  ]
}
