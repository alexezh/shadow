{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "lib": [
      "ES2020",
      "DOM"
    ],
    "outDir": "./clippy/dist",
    "rootDir": "./clippy",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "../src/server/*": ["dist/server/*"]
    }
  },
  "include": [
    "clippy/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "clippy/dist"
  ]
}